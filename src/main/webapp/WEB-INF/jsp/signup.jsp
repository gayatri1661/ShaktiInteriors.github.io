<div class="container">
<form method="post">
<h2 class="form-signin-heading">Please sign in</h2>
	<p>
      <label for="name" class="sr-only">Username</label>
      <input type="text" id="username" name="name" class="form-control" placeholder="Username" >
    </p>
    <p>
      <label for="email" class="sr-only">e mail</label>
      <input type="email" id="email" name="email" class="form-control" placeholder="email">
    </p>
    <p>
      <label for="password" class="sr-only">Password</label>
      <input type="password" id="password" name="password" class="form-control" placeholder="Password">
    </p>
    <p>
      <label for="phnum" class="sr-only">Ph num</label>
      <input type="number" id="phnum" name="phnum" class="form-control" placeholder="Phnum">
    </p>
    
    
    <p>
      <label for="address" class="sr-only">Address</label>
      <input type="text" id="text" name="address" class="form-control" placeholder="Address">
    </p>
    
   
    
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    </form>

</div>